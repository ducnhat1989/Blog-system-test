<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %>
  </span>
  <span class="content">
    <h6><%= link_to feed_item.title, feed_item %></h6>
    <%= feed_item.body %>
  </span>

  <span class="timestamp">
    Posted <%= feed_item.created_at.strftime("%Y-%m-%d %a %H:%M:%S") + " - " + time_ago_in_words(feed_item.created_at).to_s %> ago.
  </span>
</li>